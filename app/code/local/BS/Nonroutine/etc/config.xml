<config>
    <modules>
        <BS_Nonroutine>
            <version>1.0.0</version>
        </BS_Nonroutine>
    </modules>
    <global>
        <resources>
            <bs_nonroutine_setup>
                <setup>
                    <module>BS_Nonroutine</module>
                    <class>BS_Nonroutine_Model_Resource_Setup</class>
                </setup>
            </bs_nonroutine_setup>
        </resources>
        <blocks>
            <bs_nonroutine>
                <class>BS_Nonroutine_Block</class>
            </bs_nonroutine>
        </blocks>
        <helpers>
            <bs_nonroutine>
                <class>BS_Nonroutine_Helper</class>
            </bs_nonroutine>
        </helpers>
        <models>
            <bs_nonroutine>
                <class>BS_Nonroutine_Model</class>
                <resourceModel>bs_nonroutine_resource</resourceModel>
            </bs_nonroutine>
            <bs_nonroutine_resource>
                <class>BS_Nonroutine_Model_Resource</class>
                <entities>
                    <nonroutine>
                        <table>bs_nonroutine_nonroutine</table>
                    </nonroutine>
                </entities>
            </bs_nonroutine_resource>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <bs_nonroutine>
                    <file>bs_nonroutine.xml</file>
                </bs_nonroutine>
            </updates>
        </layout>
        <translate>
            <modules>
                <BS_Nonroutine>
                    <files>
                        <default>BS_Nonroutine.csv</default>
                    </files>
                </BS_Nonroutine>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <BS_Nonroutine before="Mage_Adminhtml">BS_Nonroutine_Adminhtml</BS_Nonroutine>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
