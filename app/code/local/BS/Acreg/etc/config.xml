<config>
    <modules>
        <BS_Acreg>
            <version>1.0.0</version>
        </BS_Acreg>
    </modules>
    <global>
        <resources>
            <bs_acreg_setup>
                <setup>
                    <module>BS_Acreg</module>
                    <class>BS_Acreg_Model_Resource_Setup</class>
                </setup>
            </bs_acreg_setup>
        </resources>
        <blocks>
            <bs_acreg>
                <class>BS_Acreg_Block</class>
            </bs_acreg>
        </blocks>
        <helpers>
            <bs_acreg>
                <class>BS_Acreg_Helper</class>
            </bs_acreg>
        </helpers>
        <models>
            <bs_acreg>
                <class>BS_Acreg_Model</class>
                <resourceModel>bs_acreg_resource</resourceModel>
            </bs_acreg>
            <bs_acreg_resource>
                <class>BS_Acreg_Model_Resource</class>
                <entities>
                    <customer>
                        <table>bs_acreg_customer</table>
                    </customer>
                    <acreg>
                        <table>bs_acreg_acreg</table>
                    </acreg>
                </entities>
            </bs_acreg_resource>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <bs_acreg>
                    <file>bs_acreg.xml</file>
                </bs_acreg>
            </updates>
        </layout>
        <translate>
            <modules>
                <BS_Acreg>
                    <files>
                        <default>BS_Acreg.csv</default>
                    </files>
                </BS_Acreg>
            </modules>
        </translate>
        <global_search>
            <customer>
                <class>bs_acreg/adminhtml_search_customer</class>
                <acl>bs_acreg</acl>
            </customer>
            <acreg>
                <class>bs_acreg/adminhtml_search_acreg</class>
                <acl>bs_acreg</acl>
            </acreg>
        </global_search>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <BS_Acreg before="Mage_Adminhtml">BS_Acreg_Adminhtml</BS_Acreg>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
