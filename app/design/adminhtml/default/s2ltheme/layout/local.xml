<layout version="0.1.0">
    <default translate="label" module="page">
        <reference name="head">
            <action method="setTitle" translate="title"><title>Admin Panel</title></action>
            <action method="addCss"><name>bootstrap.min.css</name></action>
            <action method="addCss"><name>bootstrap_custom.css</name></action>
            <action method="addCss"><name>themify/themify-icons.css</name></action>
            <action method="addCss"><name>cmsmart_layout.css</name></action>
            <action method="addCss"><name>jquery.mCustomScrollbar.css</name></action>
            <action method="addItem"><type>skin_css</type><name>custom_responsive.css</name><params>media="screen, projection"</params></action>
           <action method="addJs"><script>s2ltheme/jquery-1.12.4.min.js</script></action>
            <action method="addJs"><script>s2ltheme/jquery-noconflict.js</script></action>
            <action method="addJs"><script>s2ltheme/jquery-ui.min.js</script></action>
            <action method="addJs"><script>s2ltheme/jquery.accordion.source.js</script></action>
            <action method="addJs"><script>s2ltheme/tooltips.js</script></action>
            <action method="addJs"><script>s2ltheme/bootstrap.min.js</script></action>
            <action method="addCss"><name>font-awesome-4.7.0/css/font-awesome.min.css</name></action>
            <!--[if lt IE 8]><!-->
            <action method="addCss"><name>themify/ie7.css</name></action>
            <!--<![endif]-->            
        </reference>
        <reference name="footer">
            <action method="setTemplate">
                <!-- needed because of base/default/layout/cmsmartadmintheme.xml -->
                <template>page/footer.phtml</template>
            </action>
        </reference>
    </default>
</layout>